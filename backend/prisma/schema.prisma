datasource db {
  provider = "postgresql" // o "sqlite" in dev
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Service {
  id        Int      @id @default(autoincrement())
  title     String
  subtitle  String
  content   String
  category  String
  imageUrl  String?
  createdAt DateTime @default(now())
}


model ContactMessage {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())
}